@model JumbotronEventFinder.Models.Purchase

@{
    ViewData["Title"] = "Purchases";
}

<h2>Purchase Tickets </h2>

<hr />
<div class="row bg-secondary-subtle">
    <div class="col-md-4">
        <form asp-controller="Purchases" asp-action="Index" asp-route-showId="@Model.ShowId" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShowId" />
            <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TicketSales" class="control-label"></label>
                <input asp-for="TicketSales" class="form-control" />
                <span asp-validation-for="TicketSales" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PaymentType" class="control-label"></label>
                <select asp-for="PaymentType" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="CreditCard">Credit Card</option>
                    <option value="DebitCard">Debit Card</option>
                </select>
                <span asp-validation-for="PaymentType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" maxlength="16" minlength="16" pattern="\d{16}" placeholder="16 digits" required />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ExpirationDate" class="control-label">Expiration Date (MM/YY)</label>
                <input type="text" asp-for="ExpirationDate" class="form-control" placeholder="MM/YY" pattern="^(0[1-9]|1[0-2])\/\d{2}$" required/>
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                <small class="text-muted">Format: MM/YY</small>
            </div>
            <div class="mb-3">
                <label asp-for="CVV" class="control-label"></label>
                <input asp-for="CVV" class="form-control" maxlength="3" minlength="3" pattern="\d{3}" placeholder="3 digits" required />
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>